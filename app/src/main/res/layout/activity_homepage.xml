<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#FF187D29">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#FF187D29">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main1" />

                <!-- Horizontal Scrollable Products -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Product 1 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product1"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Classic Runner"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 1500"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <!-- Product 2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product2"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Speedster Pro"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 1800"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <!-- Product 3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product3"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Urban Sneakers"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 1300"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <!-- Product 4 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product4"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trail Blazer"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 1000"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <!-- Product 5 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product1"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mountain Hiker"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 1200"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <!-- Product 6 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product2"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Beach Sandals"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 800"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <!-- Product 7 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product3"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sports Boost"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 1700"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <!-- Product 8 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/product4"
                                android:background="@drawable/shadow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Luxury Loafers"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="#187D29"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT 1400"
                                android:gravity="center"
                                android:textAlignment="center" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <Button
                    android:id="@+id/button_open_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View all products"
                    android:backgroundTint="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#187D29"
                    android:textStyle="bold"
                    android:textSize="26dp"
                    android:text="JUST ADDED PRODUCTS!"/>

                <ListView
                    android:id="@+id/list_view"
                    android:layout_width="wrap_content"
                    android:layout_height="481dp"
                    android:orientation="horizontal"
                    android:scrollbars="none" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FF187D29"
                    android:layout_marginTop="16dp"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What are barefoot shoes?"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Barefoot shoes are designed to mimic the natural shape and function of the human foot. By mimicking nature's design, they give your feet strength and balance you never thought possible.\n\nUnlike regular shoes, which restrict your movement and posture, barefoot shoes give your feet room to breathe, flex, and feel. Say goodbye to those squishy, cushion-filled uncomfortable shoes!"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="400dp"

                    android:layout_height="400dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/img"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stay tuned for our promotions and offers!"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FF187D29"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"/>





            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
